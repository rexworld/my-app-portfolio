<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="My Nanodegree Apps!"
            android:id="@+id/headline"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Spotify Streamer"
            android:id="@+id/spotify"
            android:layout_gravity="center_horizontal"
            android:background="#f08c35"
            android:layout_marginTop="20dp"
            android:onClick="sendMessage"/>

        <Button
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Score App"
            android:id="@+id/scores"
            android:layout_gravity="center_horizontal"
            android:background="#f08c35"
            android:layout_marginTop="20dp"
            android:onClick="sendMessage"/>

        <Button
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Library App"
            android:id="@+id/library"
            android:layout_gravity="center_horizontal"
            android:background="#f08c35"
            android:layout_marginTop="20dp"
            android:onClick="sendMessage"/>

        <Button
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Build It Bigger"
            android:id="@+id/buildit"
            android:layout_gravity="center_horizontal"
            android:background="#f08c35"
            android:layout_marginTop="20dp"
            android:onClick="sendMessage"/>

        <Button
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Xyz Reader"
            android:id="@+id/xyz"
            android:layout_gravity="center_horizontal"
            android:background="#f08c35"
            android:layout_marginTop="20dp"
            android:onClick="sendMessage"/>

        <Button
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Capstone My Own App"
            android:id="@+id/capstone"
            android:layout_gravity="center_horizontal"
            android:background="#ffff5142"
            android:layout_marginTop="20dp"
            android:onClick="sendMessage"/>
    </LinearLayout>

</RelativeLayout>
